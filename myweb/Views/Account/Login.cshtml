@model myweb.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-5">
        <div class="glass-card p-5">
            <div class="text-center mb-4">
                <i class="fas fa-sign-in-alt text-gradient" style="font-size: 3rem;"></i>
                <h2 class="mt-3 mb-2">Welcome Back</h2>
                <p class="text-muted">Sign in to access your tasks</p>
            </div>

            <form asp-action="Login" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />

                <div class="mb-3">
                    <label asp-for="Username" class="form-label fw-bold">
                        <i class="fas fa-user me-2"></i>Username
                    </label>
                    <input asp-for="Username" class="form-control" placeholder="Enter your username" autofocus />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label fw-bold">
                        <i class="fas fa-lock me-2"></i>Password
                    </label>
                    <input asp-for="Password" class="form-control" placeholder="Enter your password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="mb-3 form-check">
                    <input asp-for="RememberMe" class="form-check-input" />
                    <label asp-for="RememberMe" class="form-check-label">
                        Remember me for 30 days
                    </label>
                </div>

                <div class="d-grid mb-3">
                    <button type="submit" class="btn btn-primary-custom btn-lg">
                        <i class="fas fa-sign-in-alt me-2"></i>Sign In
                    </button>
                </div>

                <div class="text-center">
                    <p class="text-muted mb-0">
                        Don't have an account? 
                        <a asp-action="Register" class="text-primary fw-bold">Register here</a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <style>
        .glass-card {
            animation: fadeInUp 0.6s ease-out;
        }
        
        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
}
