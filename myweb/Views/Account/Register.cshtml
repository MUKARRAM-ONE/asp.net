@model myweb.Models.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <div class="glass-card p-5">
            <div class="text-center mb-4">
                <i class="fas fa-user-plus text-gradient" style="font-size: 3rem;"></i>
                <h2 class="mt-3 mb-2">Create Account</h2>
                <p class="text-muted">Join TaskManagerPro today</p>
            </div>

            <form asp-action="Register" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label asp-for="Username" class="form-label fw-bold">
                        <i class="fas fa-user me-2"></i>Username
                    </label>
                    <input asp-for="Username" class="form-control" placeholder="Choose a username" autofocus />
                    <span asp-validation-for="Username" class="text-danger"></span>
                    <small class="form-text text-muted">3-50 characters</small>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-bold">
                        <i class="fas fa-envelope me-2"></i>Email
                    </label>
                    <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label fw-bold">
                        <i class="fas fa-lock me-2"></i>Password
                    </label>
                    <input asp-for="Password" class="form-control" placeholder="Create a password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <small class="form-text text-muted">Minimum 6 characters</small>
                </div>

                <div class="mb-4">
                    <label asp-for="ConfirmPassword" class="form-label fw-bold">
                        <i class="fas fa-lock me-2"></i>Confirm Password
                    </label>
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm your password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="d-grid mb-3">
                    <button type="submit" class="btn btn-primary-custom btn-lg">
                        <i class="fas fa-user-plus me-2"></i>Create Account
                    </button>
                </div>

                <div class="text-center">
                    <p class="text-muted mb-0">
                        Already have an account? 
                        <a asp-action="Login" class="text-primary fw-bold">Sign in here</a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <style>
        .glass-card {
            animation: fadeInUp 0.6s ease-out;
        }
        
        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
}
