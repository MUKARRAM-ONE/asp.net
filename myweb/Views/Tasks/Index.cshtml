@model IEnumerable<myweb.Models.Task>

@{
    ViewData["Title"] = "My Tasks";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="text-gradient display-5 mb-2">My Tasks</h1>
        <p class="text-secondary">Manage and organize your tasks</p>
    </div>
    <a asp-action="Create" class="btn btn-primary-custom">
        <i class="fas fa-plus me-2"></i>Create New Task
    </a>
</div>

@if (Model != null && Model.Any())
{
    <div class="row g-4">
        @foreach (var task in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="glass-card p-4 h-100">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <h5 class="mb-0">@task.Title</h5>
                        @if (task.Priority == myweb.Models.TaskPriority.High)
                        {
                            <span class="badge bg-danger">High</span>
                        }
                        else if (task.Priority == myweb.Models.TaskPriority.Medium)
                        {
                            <span class="badge bg-warning">Medium</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Low</span>
                        }
                    </div>
                    
                    @if (!string.IsNullOrEmpty(task.Description))
                    {
                        <p class="text-muted mb-3">@task.Description</p>
                    }
                    
                    <div class="mb-3">
                        @if (task.Category != null)
                        {
                            <div class="mb-2">
                                <i class="@task.Category.IconClass me-2" style="color: @task.Category.ColorHex;"></i>
                                <span class="text-muted">@task.Category.Name</span>
                            </div>
                        }
                        
                        @if (task.DueDate.HasValue)
                        {
                            <div class="mb-2">
                                <i class="fas fa-calendar me-2 text-muted"></i>
                                <span class="text-muted">Due: @task.DueDate.Value.ToShortDateString()</span>
                            </div>
                        }
                    </div>
                    
                    <div class="mb-3">
                        @if (task.Status == myweb.Models.TaskStatus.Done)
                        {
                            <span class="badge bg-success"><i class="fas fa-check me-1"></i>Done</span>
                        }
                        else if (task.Status == myweb.Models.TaskStatus.InProgress)
                        {
                            <span class="badge bg-warning"><i class="fas fa-spinner me-1"></i>In Progress</span>
                        }
                        else
                        {
                            <span class="badge bg-info"><i class="fas fa-clock me-1"></i>To Do</span>
                        }
                    </div>
                    
                    <div class="d-flex gap-2">
                        <a asp-action="Edit" asp-route-id="@task.Id" class="btn btn-sm btn-outline-primary flex-grow-1">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@task.Id" class="btn btn-sm btn-outline-danger">
                            <i class="fas fa-trash"></i>
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="glass-card p-5 text-center">
        <i class="fas fa-tasks text-muted mb-4" style="font-size: 5rem;"></i>
        <h3 class="mb-3">No tasks yet</h3>
        <p class="text-muted mb-4">Start organizing your work by creating your first task</p>
        <a asp-action="Create" class="btn btn-primary-custom">
            <i class="fas fa-plus me-2"></i>Create Your First Task
        </a>
    </div>
}
