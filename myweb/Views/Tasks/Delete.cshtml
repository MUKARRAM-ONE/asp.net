@model myweb.Models.Task

@{
    ViewData["Title"] = "Delete Task";
}

<div class="mb-4">
    <h1 class="text-danger display-5 mb-2">Delete Task</h1>
    <p class="text-secondary">Are you sure you want to delete this task?</p>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="glass-card p-4">
            <div class="alert alert-warning">
                <i class="fas fa-exclamation-triangle me-2"></i>
                <strong>Warning!</strong> This action cannot be undone.
            </div>
            
            <dl class="row mb-4">
                <dt class="col-sm-3">Title</dt>
                <dd class="col-sm-9">@Model.Title</dd>
                
                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <dt class="col-sm-3">Description</dt>
                    <dd class="col-sm-9">@Model.Description</dd>
                }
                
                @if (Model.Category != null)
                {
                    <dt class="col-sm-3">Category</dt>
                    <dd class="col-sm-9">
                        <i class="@Model.Category.IconClass me-2" style="color: @Model.Category.ColorHex;"></i>
                        @Model.Category.Name
                    </dd>
                }
                
                <dt class="col-sm-3">Priority</dt>
                <dd class="col-sm-9">
                    @if (Model.Priority == myweb.Models.TaskPriority.High)
                    {
                        <span class="badge bg-danger">High</span>
                    }
                    else if (Model.Priority == myweb.Models.TaskPriority.Medium)
                    {
                        <span class="badge bg-warning">Medium</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Low</span>
                    }
                </dd>
                
                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">
                    @if (Model.Status == myweb.Models.TaskStatus.Done)
                    {
                        <span class="badge bg-success">Done</span>
                    }
                    else if (Model.Status == myweb.Models.TaskStatus.InProgress)
                    {
                        <span class="badge bg-warning">In Progress</span>
                    }
                    else
                    {
                        <span class="badge bg-info">To Do</span>
                    }
                </dd>
                
                @if (Model.DueDate.HasValue)
                {
                    <dt class="col-sm-3">Due Date</dt>
                    <dd class="col-sm-9">@Model.DueDate.Value.ToShortDateString()</dd>
                }
                
                <dt class="col-sm-3">Created</dt>
                <dd class="col-sm-9">@Model.CreatedAt.ToShortDateString()</dd>
            </dl>
            
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-2"></i>Delete Task
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-times me-2"></i>Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
